# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewTask {
  title: String!
  displayFlag: Boolean!
  notificationFlag: Boolean!
  detail: String
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  createTask(input: NewTask!): Boolean!
}
